import telebot


from telebot import types
 
token = '1513556604:AAEvZJ-Q-oH0RgzMJzv76Q4JwFSoZv-O_qE'
bot = telebot.TeleBot(token)
 
@bot.message_handler(commands=['start'])
def welcome(message):
 
    # keyboard
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    item1 = types.KeyboardButton("‚ö°Ô∏è–£–¥–≤–æ–∏—Ç—å Qiwi")
    item2 = types.KeyboardButton("‚ö°Ô∏è–£–¥–≤–æ–∏—Ç—å payeer")
    item3 = types.KeyboardButton("‚úÖ–û—Ç–∑—ã–≤—ã (–ì–∞—Ä–∞–Ω—Ç–∏—è)")
 
    markup.add(item1, item2, item3)
 
    bot.send_message(message.chat.id, "üöÄ–õ—É—á—à–∏–π –±–æ—Ç –ø–æ –∑–∞—Ä–∞–±–æ—Ç–∫—ÉüöÄ \nüíé–£–¥–≤–æ–∏—Ç–µ–ª—å Qiwiüíé \n‚ö°Ô∏è–£–¥–≤–æ–∏—Ç–µ–ª—å Payeer‚ö°Ô∏è \n‚ö°Ô∏è–ë–æ–ª—å—à–æ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –æ—Ç–∑—ã–≤–æ–≤‚ö°Ô∏è \n–£ –Ω–∞—Å –æ–¥–∏–Ω –±–æ—Ç, –æ—Å—Ç–µ—Ä–µ–≥–∞–π—Ç–µ—Å—å –º–æ—à–µ–Ω–Ω–∏–∫–æ–≤üÜò", reply_markup=markup)

@bot.message_handler(content_types=['text'])
def lala(message):
	if message.text == '‚ö°Ô∏è–£–¥–≤–æ–∏—Ç—å Qiwi':
	    bot.send_message(message.chat.id, '‚ùóÔ∏è–ö–∞–∫ —ç—Ç–æ —Ä–∞–±–æ—Ç–∞–µ—Ç ‚ÅâÔ∏è\nüí®–í—ã –≤–Ω–æ—Å–∏—Ç–µ –≤–∫–ª–∞–¥ –Ω–∞ –∫–æ—à–µ–ª–µ–∫ Qiwi.\nQiwi –Ω–∏–∫–Ω–µ–π–º (NEYED247) - Qiwi‚úÖ\n \n \n–ë–æ—Ç –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ –æ–±—Ä–∞–±–æ—Ç–∞–µ—Ç –ø–ª–∞—Ç–µ–∂ –∏ –ø–µ—Ä–µ—à–ª—ë—Ç –≤–∞–º —Å—É–º–º—É –≤ x2 —Å—Ä–∞–∑—É –Ω–∞ –±–∞–ª–∞–Ω—Å\n \n‚ùóÔ∏è–õ–ò–ú–ò–¢ –ù–ê –£–î–í–û–ï–ù–ò–ï - 1 –†–ê–ó‚ùóÔ∏è\n \nüíé–ê–ö–¶–ò–Ø\n \n‚ùï–ï—Å–ª–∏ –ü–µ—Ä–µ–≤–æ–¥–∏—Ç–µ –æ—Ç 125‚ÇΩ –ø–æ–ª—É—á–∞–µ—Ç–µ –Ω–µ X2, –∞ X4\n‚ùï–ï—Å–ª–∏ –ü–µ—Ä–µ–≤–æ–¥–∏—Ç–µ –æ—Ç 200‚ÇΩ –ø–æ–ª—É—á–∞–µ—Ç–µ X10\n‚ùï–ï—Å–ª–∏ –ü–µ—Ä–µ–≤–æ–¥–∏—Ç–µ –æ—Ç 300‚ÇΩ –ø–æ–ª—É—á–∞–µ—Ç–µ X20')
